{
  "name": "LIRCcustom",
  "version": "1.0",
  "slug": "lirc",
  "description": "LIRC (Linux Infrared Remote Control) Add-on for Home Assistant",
  "url": "https://github.com/wozt/lirc-addon-hass",
  "startup": "application",
  "boot": "auto",
  "host_network": true,
  "map": ["config:rw", "addons:rw"],
  "ports": {
    "8765/tcp": "8765",
    "3000/tcp": "3000"
  },
  "arch": ["aarch64"],
  "privileged": [
    "SYS_RAWIO",
    "SYS_ADMIN"
  ],
  "devices": [
    "/dev/bus/usb/001/004:/dev/bus/usb/001/004:rwm"
  ]
}

